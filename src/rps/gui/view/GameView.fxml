<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="Background" prefHeight="600.0" prefWidth="800.0" stylesheets="@../css/MainCSS.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="rps.gui.controller.GameViewController">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox prefHeight="75.0" prefWidth="800.0" />
            <HBox alignment="CENTER" prefHeight="230.0" prefWidth="800.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="142.0" prefWidth="200.0">
                     <children>
                        <Label text="You Choose:" textFill="WHITE">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <ImageView fx:id="playerImageView" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" layoutX="338.0" layoutY="10.0" prefHeight="233.0" prefWidth="300.0">
                     <children>
                        <Label text="The Winner Is:" textFill="WHITE">
                           <font>
                              <Font size="34.0" />
                           </font>
                        </Label>
                        <Label fx:id="resultInput" layoutX="106.0" layoutY="60.0" text="delet text later" textFill="WHITE">
                           <font>
                              <Font size="34.0" />
                           </font>
                        </Label>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" layoutX="388.0" layoutY="10.0" prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Label contentDisplay="CENTER" text="AI Chooses:" textFill="WHITE">
                           <font>
                              <Font size="16.0" />
                           </font>
                        </Label>
                        <ImageView fx:id="computerImageView" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="74.0" prefWidth="800.0">
               <children>
                  <Label text="so i think we can display stats here like wins, loses, and draws in this instance of the game" textFill="WHITE">
                     <font>
                        <Font size="15.0" />
                     </font></Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="207.0" prefWidth="800.0">
               <children>
                  <JFXButton fx:id="rock" onAction="#setPlayedHandAsImag">
                     <graphic>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                     </graphic>
                  </JFXButton>
                  <JFXButton fx:id="paper" onAction="#setPlayedHandAsImag">
                     <graphic>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                     </graphic>
                  </JFXButton>
                  <JFXButton fx:id="scissors" onAction="#setPlayedHandAsImag">
                     <graphic>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
                     </graphic>
                  </JFXButton>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
