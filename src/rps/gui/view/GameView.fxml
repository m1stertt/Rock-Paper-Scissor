                  <JFXButton fx:id="scissor" buttonType="RAISED" contentDisplay="CENTER" ellipsisString="" layoutX="226.0" layoutY="10.0" onAction="#playsScissor" prefHeight="200.0" prefWidth="200.0" ripplerFill="#00fffb" text="Scissor" textOverrun="CLIP">
