            </HBox>
            <HBox alignment="CENTER" prefHeight="207.0" prefWidth="800.0">
               <children>
                  <JFXButton fx:id="rock" buttonType="RAISED" contentDisplay="CENTER" ellipsisString="" onAction="#playsRock" prefHeight="200.0" prefWidth="200.0" ripplerFill="#00fffb" text="Rock" textOverrun="CLIP">
                     <effect>
                        <DropShadow />
                     </effect>
                     <graphic>
                        <ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../Images/Rock.png" />
                           </image></ImageView>
                     </graphic>
                  </JFXButton>
                  <JFXButton fx:id="paper" buttonType="RAISED" contentDisplay="CENTER" ellipsisString="" layoutX="10.0" layoutY="10.0" onAction="#playsPaper" prefHeight="200.0" prefWidth="200.0" ripplerFill="#00fffb" text="Paper" textOverrun="CLIP">
                     <effect>
                        <DropShadow />
                     </effect>
                     <graphic>
                        <ImageView fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
